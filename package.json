{
  "name": "textlint-rule-no-synonyms-resola",
  "version": "1.0.0",
  "description": "fork from textlint-ja/textlint-rule-no-synonyms",
  "keywords": [
    "textlintrule"
  ],
  "homepage": "https://github.com/chris-resola/textlint-rule-no-synonyms#readme",
  "bugs": {
    "url": "https://github.com/chris-resola/textlint-rule-no-synonyms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chris-resola/textlint-rule-no-synonyms.git"
  },
  "license": "MIT",
  "author": "Chris Lerus <c.michel@resola.ai> (https://github.com/chris-resola)",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/textlint-rule-no-synonyms.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "textlint-scripts build",
    "prepublish": "npm run --if-present build",
    "test": "textlint-scripts test",
    "watch": "textlint-scripts build --watch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "dependencies": {
    "textlint-rule-helper": "^2.1.1",
    "tiny-segmenter": "^0.2.0"
  },
  "devDependencies": {
    "@textlint/types": "^12.0.2",
    "@types/node": "^16.4.13",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "sudachi-synonyms-dictionary": "^8.0.1",
    "textlint-scripts": "^12.0.2",
    "textlint-tester": "^12.0.2",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "sudachi-synonyms-dictionary": ">=4.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
